    <div class="row" >
        <div class="col-xs-12">
            <div class="panel form-wizard" id="w4">
                <header class="panel-heading">
                    <h2 class="panel-title">Guideline Files</h2>
                </header>
                <form ng-controller="UploadController">
                    <div class="panel-body">
                        @*<div cg-busy="promise" style="top:50px"></div>*@
                        <div class="row">
                            <div class="col-md-12">

                                <button ng-click="showfields()" ng-show="viewadd" class="btn btn-primary pull-right"><img src="~/Images/upload.png" /> Upload</button>
                                <button ng-click="hidefields()" ng-show="viewclose" class="btn btn-primary pull-right"><img src="~/Images/upload.png" /> Upload</button>
                            </div>
                            <div class="form-group single-item">
                                <div class="col-md-12" ng-show="shinsertupdate">
                                    <div class="col-md-8">
                                        <label class="col-md-2 control-label">Upload File</label>
                                        <div class="col-md-7">
                                            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
                                                <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span><input type="file" name="..." onchange="angular.element(this).scope().LoadFileData(this.files)"></span>
                                                <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-primary" ng-click="UploadFile()">Upload</button>&nbsp;

                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-12 no-padding">
                            <div class="flex-row flex-nowrap">

                                <div ng-repeat="x in Folderfiles" id="{{$index}}" class="flex-scroll">


                                    <div class="col-sm-2" style="text-align: center;margin-top:10px;border-right: 1px solid #ccc;">
                                        <a ng-show="@Request.RequestContext.HttpContext.Session["show"] == true" ng-click="Remove(x)" style="float: right;padding-left: 4px;cursor:pointer;" title="Delete"><i class="fa fa-trash" style="color: #dc7777;"></i></a>
                                        <a target="_blank" href="~/Guideline/{{x}}" style="color: #000;font-weight: 600;">
                                            <div ng-show="x.substr(x.lastIndexOf('.') + 1) == 'pdf'"><img src="~/Images/pdf-icon.png" /></div>
                                            <div ng-show="x.substr(x.lastIndexOf('.') + 1) == 'docx'"><img src="~/Images/word-icon.png" /></div>
                                            <div ng-show="x.substr(x.lastIndexOf('.') + 1) == 'xlsx'"><img src="~/Images/icon.png" /></div>

                                            <h5>{{x}}</h5>
                                        </a>
                                    </div>


                                </div>
                            </div>




                        </div>

                    </div>
                </form>
            </div>
        </div>
       
    </div>


    <form ng-controller="UploadController">
        <div class="row">
            <div class="col-xs-12">
