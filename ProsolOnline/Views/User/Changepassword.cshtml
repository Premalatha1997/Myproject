    <div class="col-md-12">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div id="divNotifiy" class="alert alert-top" style="display:none;" ng-class="Notify">
                <button type="button" class="close" ng-click="NotifiyResclose()"><i class="fas fa-times"></i></button>
                <label ng-bind="Res" class="erroe-hold " />
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <section class="panel form-wizard" id="w4">
                <header class="panel-heading">
                    <h2 class="panel-title">CHANGE PASSWORD</h2>
                </header>
                <div class="panel-body">
                  
                    <div class="col-md-6">
                        <form name="form" ng-submit="form.$valid && Changepasswordsubmit()" novalidate>


                            @*<div class="form-group">
                                <label class="col-sm-4 control-label">User Name</label>
                                <div class="col-sm-8">
                                    <label class="form-control" ng-bind="UserName" name="UserName" />
                                </div>
                            </div>*@
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Current Password</label>
                                <div class="col-sm-8" ng-class="{'has-error': form.$submitted && form.Passwordchng.$invalid || res}">
                                    <div class="controls">
                                        <input type="password" ng-model="Passwordchng" name="Passwordchng" ng-blur="checkcurrentpassword()" class="form-control immediate-help" required />
                                        <div ng-show="form.Passwordchng.$invalid || res" class="input-help">
                                            <h4 ng-show="form.Passwordchng.$error.required">Password should not be blank</h4>
                                            <h4 class="alert" ng-show="!form.Passwordchng.$error.required && res == true">Worng Password</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">New Password</label>
                                <div class="col-sm-8" ng-class="{'has-error': form.$submitted && form.NewPassword.$invalid || form.NewPassword.$error.pattern}">
                                    <div class="controls">
                                        <input ng-model="NewPassword" name="NewPassword" type="password" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$*@*#$!%*?&])[A-Za-z\d$*@*#$!%*?&]{6,}/" class="form-control" required />
                                        <div ng-show="form.NewPassword.$invalid" class="input-help">
                                            <h4 ng-show="form.NewPassword.$error.required">Newpassword should not be blank</h4>
                                            <h4 class="alert" ng-show="form.NewPassword.$error.pattern">Password should have 1 Uppercase Alphabet, 1 Lowercase Alphabet, 1 Number and 1 Special Character</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Confirm Password</label>
                                <div class="col-sm-8" ng-class="{'has-error': form.$submitted && form.ConfirmPassword.$invalid || myres}">
                                    <div class="controls">
                                        <input ng-model="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control immediate-help" ng-blur="getcheck()" required />
                                        <div ng-show="form.ConfirmPassword.$invalid || myres" class="input-help">
                                            <h4 ng-show="form.ConfirmPassword.$error.required && !myres">Confirmpassword should not be blank</h4>
                                            <h4 class="alert" ng-show="!form.ConfirmPassword.required && myres==true">Password mismatch</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-7"></div>
                                <div class="col-md-5 form-submit" style="text-align:right;">
                                    <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">Submit</button>
                                    @*<button type="button" class="mb-xs mt-xs mr-xs btn btn-primary" ng-click="clear()">Cancel</button>*@

                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6"></div>
                </div>
            </section>
        </div>
    </div>
</section>
