
@{
    Layout = null;
}

<!doctype html>
<html class="fixed">

<head>
    <!-- Basic -->
    <meta charset="UTF-8">
    @*<meta name="keywords" content="HTML5 Admin Template" />*@
    <meta name="description" content="Prosol password recovery">
    @*<meta name="author" content="okler.net">*@
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
 
    <link href="/Content/theme.css" rel="stylesheet" />
    <link href="/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="/Content/css/input.css" rel="stylesheet" />
    <link href="/Content/css/font-awesome.css" rel="stylesheet" />
    <!-- Theme Custom CSS -->

    <link href="/Content/theme-custom.css" rel="stylesheet" />
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <!-- Head Libs -->

    <script src="/Scripts/modernizr.js"></script>
    <link href="/Content/angular-busy.min.css" rel="stylesheet" />

</head>
<body ng-app="pr_app" ng-controller="pr_controller">
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="" class="logo pull-left">
                <img src="~/Images/logo.png" height="75" alt="Prosol logo" />
            </a>
            <div class="panel panel-sign" style="border: 1px solid #b8c7da !important">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Recover Password</h2>
                </div>
                <div class="panel-body">
                    <div class="alert alert-info" style="margin:0px !important">
                        <p class="m-none text-weight-semibold h6">Enter your registered e-mail below and we will send you reset instructions!</p>
                    </div>
                    <form name="prform" ng-submit="prform.$valid && sendemail_forPR()" novalidate>
                        <div class="form-group mb-none">
                            <div class="input-group input-group-icon controls" ng-class="{'has-error': prform.$submitted && prform.inpurEmail.$invalid}">
                                <input name="inpurEmail" type="email" ng-model="emaill" placeholder="E-mail" class="form-control input-lg" ng-required/>
                                @*<div class="input-help">
                                    <h4></h4>
                                </div>*@
                                
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="row">
                                <div class="col-md-6">
                                    <label ng-bind="Error1"style="color:red"></label>
                                    </div>
                                    <div class="col-md-2" ><div cg-busy="promise1" style="top:50px"></div></div>
                                    <div class="col-md-4 text-right">
                                        <button class="btn btn-primary hidden-xs" type="submit">submit</button>
                                    </div>
                                </div>
                            </div>

                           <p>  Remembered? <a href="@Url.Action("Index","login")">Sign In!</a></p>
</form>
                </div>
            </div>
            <p class="text-center text-muted mt-md mb-md">&copy; CODASOL 2016. All Rights Reserved.</p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->

    <script src="/Scripts/jquery.js"></script>



    
    <script src="/Scripts/bootstrap.js"></script> 

    <!-- Theme Base, Components and Settings -->

    <script src="/Scripts/theme.js"></script>

    <!-- Theme Custom -->

    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/ctrls/passwordrecovery.js"></script>
    <script src="/Scripts/angular-busy.min.js"></script>
   
</body>
</html>
