
@{
    Layout = null;
}

<!doctype html>
<html class="fixed">

<head>
    <!-- Basic -->
    <meta charset="UTF-8">
    @*<meta name="keywords" content="HTML5 Admin Template" />*@
    <meta name="description" content="Prosol password recovery">
    @*<meta name="author" content="okler.net">*@
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->

    <link href="/Content/theme.css" rel="stylesheet" />
    <link href="/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="/Content/css/input.css" rel="stylesheet" />
    <link href="/Content/css/font-awesome.css" rel="stylesheet" />
    <!-- Theme Custom CSS -->

    <link href="/Content/theme-custom.css" rel="stylesheet" />
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <!-- Head Libs -->

    <script src="/Scripts/modernizr.js"></script>
    <link href="/Content/angular-busy.min.css" rel="stylesheet" />
</head>
<body ng-app="pr_app" ng-controller="pru_controller">
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="" class="logo pull-left">
                <img src="~/Images/logo.png" height="75" alt="Prosol logo" />
            </a>
            <div class="panel panel-sign" style="border: 1px solid #b8c7da !important">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> CHANGE PASSWORD</h2>
                </div>
                <div class="panel-body">                  
                    <form name="prform" ng-submit="prform.$valid && updatepasswordpage()" novalidate>
                        <div class="form-group mb-none">
                            <div class="input-group input-group-icon controls" ng-class="{'has-error': prform.$submitted && prform.pw1.$invalid  || prform.Password.$error.pattern }">
                                <input name="pw1" type="password" ng-model="pw" placeholder="New password" ng-pattern="/^(?=.*[a-zA-Z])(?=.*[a-zA-Z])(?=.*\d)(?=.*[$*@*$!%*?&])[A-Za-z\d$*@**$!%*?&]{6,}/" class="form-control input-lg" ng-required="true"    />
                                    
                                <div ng-show="prform.pw1.$invalid" class="input-help">
                                    <h4 ng-show="prform.pw1.$error.required">Password required</h4>
                                    <h4 class="alert" ng-show="prform.pw1.$error.pattern">should have upper, lower, special char and number with atleast 6 digits</h4>

                                </div>                     
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-icon controls" ng-class="{'has-error': prform.$submitted && prform.pw2.$invalid }">
                                <input name="pw2" type="password" ng-model="cpw" placeholder="Conform password" class="form-control input-lg" ng-required="true" />
                                    <div class="input-help">
                                        <h4>Conform Password required</h4>
                                    </div>

                                </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label ng-bind="error123" class="col-md-4" style="color:red;"> </label>                              
                               
                                <div class="col-md-2" style="text-align:right;"><div cg-busy="promise1" style="top:50px"></div></div>    
                                <div class="col-md-6 text-right"><button class="btn btn-primary hidden-xs text-right" type="submit">Change Password</button>     </div>                       
                            </div>
                            <p class="text-center mt-lg"><span style="color:red" ng-bind="=Error1"> @*{{Error1}}*@ </span>Remembered? <a href="@Url.Action("Index","login")">Sign In!</a></p>
                        </div>

                           
</form>
                </div>
            </div>
            <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2016. All Rights Reserved.</p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->

    <script src="/Scripts/jquery.js"></script>




    <script src="/Scripts/bootstrap.js"></script>

    <!-- Theme Base, Components and Settings -->

    <script src="/Scripts/theme.js"></script>

    <!-- Theme Custom -->

    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/ctrls/passwordrecovery.js"></script>
    <script src="/Scripts/angular-busy.min.js"></script>

</body>
