<section role="main" class="content-body" ng-controller="MCPcontroller">
    @*<header class="page-header">
            <div class="right-wrapper pull-right">
                <ol class="breadcrumbs">
                    <li><span>Asset Master</span></li>
                    <li><span>Mcp</span></li>
                </ol>
            </div>
        </header>
