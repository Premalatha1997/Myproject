                                                    <label id="Squence" ng-bind=$index+1 />


                                                </td>
                                                <td style="width: 15%">
                                                    <div class="col-md-12 no-padding">
                                                        <div class="col-md-10 no-padding">
                                                            <label ng-bind="fl.ServiceCode" ng-show="fl.ServiceCode!=null"></label>
                                                        </div>
                                                    </div>
                                                </td>

