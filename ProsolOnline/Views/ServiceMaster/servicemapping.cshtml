                                            <input type="button" id="btnDelete" class="deleteContact btn btn btn-danger btn-xs" ng-click="RemoveRow()" value="Remove" />
                                        </div>
                                    </div>
                                </div>
</fieldset>
</div>

                        <div class="col-md-12" ng-hide=hide>
